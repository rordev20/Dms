
<figure class="highcharts-figure">
    <div id="container"></div>
    <p class="highcharts-description">
       Work done in last 7 days
    </p>
</figure>


<script>

  var categories = <%= @all_seven_days.map { |sd| sd }.to_json.html_safe %>;
  var series = <%= @series_data.map {|sd| {name: sd[:name], data: sd[:data]}}.to_json.html_safe %>;
  Highcharts.chart('container', {
    chart: {
        type: 'column'
    },
    title: {
        text: 'Weekly Efforts'
    },
    subtitle: {
        text: '(Last 7 Days)'
    },
    xAxis: {
        categories: categories,
        crosshair: true,
        accessibility: {
            description: 'Week Days'
        }
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Hrs'
        }
    },
    tooltip: {
        valueSuffix: ' (Hrs)'
    },
    plotOptions: {
        column: {
            pointPadding: 0.2,
            borderWidth: 0
        }
    },
    series: series
});

</script>  

